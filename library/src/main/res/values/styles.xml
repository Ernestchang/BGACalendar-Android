<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BGACalendarWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BGACalendarMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BGACalendarWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BGACalendarMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BGACalendarMatchAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="BGACalendarAutoMatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BGACalendarWrapAuto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="BGACalendarAutoWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BGACalendarWrapMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarWrapMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarMatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarMatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarWrapWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarWrapWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarMatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarMatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarMatchAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarMatchAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarAutoMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarAutoMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarWrapAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarWrapAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarAutoWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BGACalendarAutoWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BGACalendarWeekTv" parent="BGACalendarAutoWrap">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bga_calendar_headerTextColor</item>
        <item name="android:textSize">@dimen/bga_calendar_headerTextSize</item>
    </style>

    <style name="BGACalendarFunctionTv" parent="BGACalendarWrapWrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/bga_calendar_headerGap</item>
        <item name="android:textColor">@color/bga_calendar_functionTextColor</item>
        <item name="android:textSize">@dimen/bga_calendar_functionTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>